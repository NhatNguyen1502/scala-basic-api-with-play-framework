# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Users API
POST    /api/admin/users  controllers.UserController.createUser()
GET     /api/admin/users  controllers.UserController.getListUsers
GET     /api/admin/users/:id  controllers.UserController.getUserById(id: String)
PATCH     /api/admin/users/:id  controllers.UserController.updateUser(id: String)
DELETE   /api/admin/users/:id  controllers.UserController.deleteUser(id: String)

# Swagger UI
GET   /docs/swagger    controllers.SwaggerController.ui

# Auth
POST    /auth/sign-in      controllers.AuthController.login
POST    /auth/sign-up      controllers.AuthController.signUp

# Category API
POST    /api/admin/categories  controllers.CategoryController.createCategory()
GET    /api/categories  controllers.CategoryController.getAllCategory()
PUT    /api/admin/categories/:id  controllers.CategoryController.updateCategory(id: String)
DELETE    /api/admin/categories/:id  controllers.CategoryController.deleteCategory(id: String)

# Product API
POST    /api/admin/products  controllers.ProductController.createProduct()
